# This file describes the network interfaces available on your system
# and how to activate them. For more information, see interfaces(5).

source /etc/network/interfaces.d/*.intf

# The loopback network interface
auto lo
iface lo inet loopback
    address 10.255.255.3/32

# The primary network interface
auto eth0
iface eth0 inet dhcp

#The physical interface
#Leaf03 is a trunk interface so the packet already arrives in double tagged
#The 802.1ad vlan tag is not necessary
auto swp1
iface swp1

auto swp51
iface swp51
    address 10.255.255.3/32

auto bridge
iface bridge
    bridge-ports swp1.100 vni15
    bridge-l2protocol-tunnel all
    bridge-vlan-aware no

auto vni15
iface vni15
    vxlan-id 15
    vxlan-local-tunnelip 10.255.255.3
    vxlan-remoteip 10.255.255.1